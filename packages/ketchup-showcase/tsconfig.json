{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "h",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}